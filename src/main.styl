body
    margin: 0
    background: #E7F6FF
    
*
    font-family: 'Inter'
.wrapper
    max-width: 1080px
    background #ffff
    margin: 50px auto 
    box-shadow: 0 10px 20px 0 rgba(0, 0, 0, 0.04)
    border-radius: 20px
    
.wrapper-overlye
    position: absolute
    left: 0
    top: 0
    width 100%
    height 100%
    background-color: rgba(0,0,0,0.5)
    z-index 1
.wrapper-aside
    position absolute
    right: 0
    height 100%
    box-shadow: -10px 4px 24px 0 rgba(0, 0, 0, 0.1);
    background: #fff;
    width 420px
    padding: 30px
    display: flex;
    flex-direction: column;
    &-title
        font-size 24px
        color: #000
        font-weight: 700;
        margin 0 0 30px 0
.aside-top
    flex: 1
    overflow: auto
    margin-bottom: 55px
.aside-cartItem
    border: 1px solid #f3f3f3;
    border-radius: 20px;
    padding 20px
    margin-bottom: 20px 
    &__img
        background-position: 0 -7px
    &__icon
        margin-bottom: -37px
        opacity: 0.5
        transition: opacity 0.2s ease-in-out
        cursor pointer
        &:hover
            opacity 1
    &-text
        margin: 0 12px 0px  21px  
        &__title
            font-weight: 400;
            font-size: 14px;
            color: #000;
            margin 0 0 8px   0
        &__price
            font-weight: 700;
            font-size: 14px;
            color: #000;
.aside-bottom
    width 100%
    max-width 360px
    ul
        li 
            display: flex
            justify-content: space-between
            position relative
            align-items: flex-end;
            margin-bottom: 19px
            span
                display: block
                white-space: nowrap
                &:first-child
                    font-weight: 400;
                    font-size: 16px;
                    color: #000;
                &:last-child
                    display: block
                    font-weight: 600;
                    font-size: 16px;
                    color: #000;
            .aside-bottom__dashed   
                bottom: 2px
                width: 100%
                height 1px
                border-bottom: 1px dashed #dfdfdf;
                position relative
                top: -4px
                margin: 0 9px   
    .aside-bottom___btn
        background: #9dd458;
        font-weight: 600;
        font-size: 16px;
        text-align: center;
        color: #fff;
        border: none
        padding: 18px 0px
        width 100%
        border-radius: 18px;
        background-repeat: no-repeat
        background-size: center
        background-position: calc(50% + 125px) center;
        transition: background 0.2s ease-in-out
        cursor: pointer
        &:hover
            background: lighten(#9dd458, 10%)
            background-repeat: no-repeat
            background-size: center
            background-position: calc(50% + 125px) center;
        &:active
            background: darken(#9dd458, 5%)
            background-repeat: no-repeat
            background-size: center
            background-position: calc(50% + 125px) center;
