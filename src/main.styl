main
    .showcase
        &-top
            display: flex
            margin-bottom: 40px
            align-items: center
            justify-content: space-between
            &__title
                font-weight: 700
                ont-size: 32px
                olor: #000
            &__search
                border: 1px solid #f3f3f3;
                border-radius: 10px;
                padding: 0 15px 
                display flex
                align-items: center
                input
                    padding: 13px
                    border:0
                    font-weight: 400;
                    font-size: 14px;
                    width 200px
                    &:placeholder
                        color: #c4c4c4; 
        &-wraper
            display: grid
            grid-template-columns: repeat(4,210px)
            gap 45px
            &-item
                position relative
                border: 1px solid #f3f3f3;
                border-radius: 40px;
                padding: 20px
                width: 210px;
                transition: box-shadow 0.2s ease-in-out, transform 0.2s ease-in-out
                &:hover
                    transform: translateY(-5px);
                    box-shadow: 0 20px 35px 0 rgba(0, 0, 0, 0.06);
                &__title
                    font-weight: 400;
                    font-size: 14px;
                    color: #000;
                    margin-bottom 14px
                &-favorite
                    position: absolute
                    cursor: pointer
                &__suptitle
                    font-weight: 500;
                    font-size: 11px;
                    text-transform: uppercase;
                    color: #bdbdbd;
                    display block
                &__price
                    font-weight: 700;
                    font-size: 14px;
                    color: #000;
                .showcase-wraper__btn
                    position: absolute
                    bottom: 21px
                    right: 29px
                    display block
                    border: 1px solid #f2f2f2
                    border-radius: 8px  
                    background #fff  
                    height 32px 
                    width 32px
                    cursor pointer
